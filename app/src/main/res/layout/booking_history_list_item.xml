<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:background="@drawable/ic_ticket_booking"
        android:descendantFocusability="blocksDescendants"
        android:orientation="vertical"
        android:padding="2dp">

        <TextView
            android:id="@+id/txt_event_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginTop="10dp"
            android:text="Mini Marathon Championship"
            android:textColor="@color/text_black"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:layout_marginTop="10dp"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.50"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="Date"
                    android:textColor="@color/text_black"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/txt_event_booked_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="20/12/2017"
                    android:textColor="@color/text_black"
                    android:textSize="15dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.50"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="Time"
                    android:textColor="@color/text_black"
                    android:textSize="18dp"/>

                <TextView
                    android:id="@+id/txt_event_booked_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="12:00 PM"
                    android:textColor="@color/text_black"
                    android:textSize="15dp"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/txt_event_name3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:ellipsize="end"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:text="Location"
            android:textColor="@color/text_black"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/txt_event_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="12, Mini Marathon Championship, Marathon"
            android:textColor="@color/text_black"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginStart="5dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="More >>>"
            android:layout_marginEnd="30dp"
            android:textColor="@color/text_black"
            android:textSize="18dp" />

    </LinearLayout>
</LinearLayout>