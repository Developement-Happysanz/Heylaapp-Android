<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.palprotech.heylaapp.activity.AdvancedFilterResultActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/appColorBase"
        android:minHeight="60dp"/>

    <ImageView
        android:id="@+id/back_res"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:minHeight="60dp"
        android:paddingEnd="15dp"
        android:paddingStart="10dp"
        android:src="@drawable/ic_arrow_back_white_24dp" />

    <TextView
        android:id="@+id/tvtitletext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/muli"
        android:gravity="center_vertical|left"
        android:minHeight="60dp"
        android:layout_toRightOf="@+id/back_res"
        android:padding="5dp"
        android:text="Search Result"
        android:textColor="@color/white"
        android:textSize="@dimen/actionbarTextSize"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/back_res"
        android:minHeight="60dp"
        android:src="@drawable/heyla_logo_transparent"
        android:visibility="gone"/>


    <ListView
        android:id="@+id/listView_events"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar_result"
        android:divider="@color/background_grey"
        android:dividerHeight="4dp">

    </ListView>

</RelativeLayout>
