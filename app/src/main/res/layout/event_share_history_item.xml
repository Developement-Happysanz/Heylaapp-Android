<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/share_event_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/muli"
        android:textSize="16sp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="15dp"/>

    <TextView
        android:id="@+id/share_event_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/muli"
        android:layout_below="@id/share_event_name"
        android:layout_toEndOf="@id/ic_loc"
        android:textSize="14sp"/>

    <ImageView
        android:id="@+id/ic_loc"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_location_share"
        android:layout_alignTop="@id/share_event_location"
        android:layout_alignStart="@id/share_event_name"
        android:layout_alignBottom="@id/share_event_location" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/bordergray"
        android:visibility="gone"
        android:layout_marginTop="15dp"
        android:layout_below="@id/share_event_location"/>

</RelativeLayout>