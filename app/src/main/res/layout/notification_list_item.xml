<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/shadow_round"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:padding="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_event_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/muli"
            android:hint="25 AUG 2555"
            android:singleLine="true"
            android:layout_marginLeft="10dp"
            android:textColor="@color/text_black"
            android:textColorHint="@color/text_black"
            android:textSize="12sp" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/btn_grey_border">

        <LinearLayout
            android:id="@+id/nor_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_logo_layout"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:layout_gravity="bottom"
                android:background="@color/white">

                <Button
                    android:id="@+id/event_paid_btn"
                    android:layout_width="54dp"
                    android:layout_height="26dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    android:layout_marginRight="15dp"
                    android:background="@color/appColorBase"
                    android:fontFamily="@font/muli"
                    android:gravity="center"
                    android:text=""
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:visibility="gone" />


                <TextView
                    android:id="@+id/txt_event_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_event_name"
                    android:fontFamily="@font/muli"
                    android:text="ABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:layout_alignLeft="@+id/txt_event_name"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txt_event_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="5dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/muli"
                    android:paddingTop="5dp"
                    android:singleLine="true"
                    android:text="Mini Marathon Championship"
                    android:textColor="@color/text_black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </LinearLayout>


        <android.support.v7.widget.CardView
            android:id="@+id/img_logo_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp">

            <ImageView
                android:id="@+id/img_logo"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/shadow_round" />

        </android.support.v7.widget.CardView>

    </RelativeLayout>

</LinearLayout>