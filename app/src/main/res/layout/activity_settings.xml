<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/profile_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Edit Profile"
            android:fontFamily="@font/Muli"
            android:textColor="@color/text_black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/change_number_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_settings"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Change Number"
            android:fontFamily="@font/Muli"
            android:textColor="@color/text_black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/change_password_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/change_number_settings"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/Muli"
            android:text="Change Password"
            android:textColor="@color/text_black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/verify_mail_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/change_password_settings"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Verify Mail"
            android:fontFamily="@font/Muli"
            android:textColor="@color/text_black"
            android:textSize="20dp" />


    </RelativeLayout>

</LinearLayout>