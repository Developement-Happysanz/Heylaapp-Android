<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/leaderboard_gray"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <RelativeLayout
            android:id="@+id/userinfo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/appColorBase"
            android:gravity="">

            <Button
                android:id="@+id/follow"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:background="@drawable/ic_leaderboard_follow" />


            <RelativeLayout
                android:id="@+id/edit_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center">

                <com.palprotech.heylaapp.customview.CircleImageView
                    android:id="@+id/leaderboard_profile_img"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_default_profile" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/username"
                    android:layout_alignTop="@+id/username"
                    android:layout_toEndOf="@+id/username"
                    android:paddingEnd="5dp"
                    android:paddingStart="5dp"
                    android:src="@drawable/ic_leaderboard_edit" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/leaderboard_profile_img"
                    android:fontFamily="@font/muli"
                    android:gravity="center_horizontal"
                    android:hint="Narendar Ravikrishnan"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name"
                    android:layout_centerInParent="true"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/muli"
                    android:hint=""
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="15sp" />

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/user_point_info"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/userinfo"
            android:background="@color/white"
            android:gravity="">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <ImageView
                    android:id="@+id/trophy"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_alignEnd="@id/total_points"
                    android:layout_alignStart="@+id/trophy_text"
                    android:src="@drawable/ic_leaderboard_trophy" />

                <TextView
                    android:id="@+id/trophy_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/trophy"
                    android:fontFamily="@font/muli"
                    android:text="Total Points"
                    android:textColor="@color/text_black"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/total_points"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/trophy_text"
                    android:layout_alignTop="@+id/trophy_text"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@id/trophy_text"
                    android:fontFamily="@font/muli"
                    android:text=""
                    android:textColor="@color/text_black"
                    android:textSize="18dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@id/level_text"
                    android:layout_alignStart="@+id/level_text"
                    android:src="@drawable/ic_leaderboard_rank" />

                <TextView
                    android:id="@+id/level_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/level"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="@font/muli"
                    android:text=" points for next rank"
                    android:textColor="@color/text_black"
                    android:textSize="18dp" />
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_point_info">

            <RelativeLayout
                android:id="@+id/login_layout"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_square_google"
                android:gravity="center">

                <ImageView
                    android:id="@+id/login_img"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/ic_leaderboard_login" />

                <TextView
                    android:id="@+id/login_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/login_img"
                    android:layout_alignTop="@+id/login_img"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@+id/login_img"
                    android:fontFamily="@font/muli"
                    android:gravity="center"
                    android:paddingStart="5dp"
                    android:text="Login"
                    android:textColor="@color/text_black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/login_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/login_text"
                    android:layout_alignTop="@id/login_text"
                    android:layout_marginStart="5dp"
                    android:layout_toRightOf="@id/login_text"
                    android:fontFamily="@font/muli"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_black"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/login_star"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignBottom="@id/login_text"
                    android:layout_alignTop="@id/login_text"
                    android:layout_marginEnd="50dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_leaderboard_star" />

                <TextView
                    android:id="@+id/login_star_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/login_star"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@id/login_star"
                    android:layout_marginEnd="20dp"
                    android:text="000"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/muli"
                    android:gravity="center"
                    android:textColor="@color/text_black"
                    android:textSize="15sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/sharing_layout"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_below="@id/login_layout"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_square_google"
                android:gravity="center">

                <ImageView
                    android:id="@+id/sharing_img"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/ic_leaderboard_event_share" />

                <TextView
                    android:id="@+id/sharing_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/sharing_img"
                    android:layout_alignTop="@+id/sharing_img"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@+id/sharing_img"
                    android:fontFamily="@font/muli"
                    android:gravity="center"
                    android:paddingStart="5dp"
                    android:text="Event Sharing"
                    android:textColor="@color/text_black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/sharing_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/sharing_text"
                    android:layout_alignTop="@id/sharing_text"
                    android:layout_marginStart="5dp"
                    android:layout_toRightOf="@id/sharing_text"
                    android:fontFamily="@font/muli"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_black"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/share_star"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignBottom="@id/sharing_text"
                    android:layout_alignTop="@id/sharing_text"
                    android:src="@drawable/ic_leaderboard_star" />

                <TextView
                    android:id="@+id/share_star_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/share_star"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@id/share_star"
                    android:layout_marginEnd="20dp"
                    android:text="000"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/muli"
                    android:gravity="center"
                    android:textColor="@color/text_black"
                    android:textSize="15sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/check_in_layout"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_below="@id/sharing_layout"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_square_google"
                android:gravity="center">

                <ImageView
                    android:id="@+id/check_in_img"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/ic_leaderboard_check_in" />

                <TextView
                    android:id="@+id/check_in_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/check_in_img"
                    android:layout_alignTop="@+id/check_in_img"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@+id/check_in_img"
                    android:fontFamily="@font/muli"
                    android:gravity="center"
                    android:paddingStart="5dp"
                    android:text="Check-In"
                    android:textColor="@color/text_black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/check_in_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/check_in_text"
                    android:layout_alignTop="@id/check_in_text"
                    android:layout_marginStart="5dp"
                    android:layout_toRightOf="@id/check_in_text"
                    android:fontFamily="@font/muli"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_black"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/check_in_star"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignBottom="@id/check_in_text"
                    android:layout_alignTop="@id/check_in_text"
                    android:layout_marginEnd="50dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_leaderboard_star" />

                <TextView
                    android:id="@+id/check_in_star_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/check_in_star"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@id/check_in_star"
                    android:layout_marginEnd="20dp"
                    android:text="000"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/muli"
                    android:gravity="center"
                    android:textColor="@color/text_black"
                    android:textSize="15sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/review_layout"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_below="@id/check_in_layout"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_square_google"
                android:gravity="center">

                <ImageView
                    android:id="@+id/review_img"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/ic_leaderboard_review" />

                <TextView
                    android:id="@+id/review_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/review_img"
                    android:layout_alignTop="@+id/review_img"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@+id/review_img"
                    android:fontFamily="@font/muli"
                    android:gravity="center"
                    android:paddingStart="5dp"
                    android:text="Review"
                    android:textColor="@color/text_black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/review_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/review_text"
                    android:layout_alignTop="@id/review_text"
                    android:layout_marginStart="5dp"
                    android:layout_toRightOf="@id/review_text"
                    android:fontFamily="@font/muli"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_black"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/review_star"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignBottom="@id/review_text"
                    android:layout_alignTop="@id/review_text"
                    android:layout_marginEnd="50dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_leaderboard_star" />

                <TextView
                    android:id="@+id/review_star_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/review_star"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@id/review_star"
                    android:layout_marginEnd="20dp"
                    android:text="000"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/muli"
                    android:gravity="center"
                    android:textColor="@color/text_black"
                    android:textSize="15sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/booking_layout"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_below="@id/review_layout"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_square_google"
                android:gravity="center">

                <ImageView
                    android:id="@+id/booking_img"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/ic_leaderboard_booking" />

                <TextView
                    android:id="@+id/booking_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/booking_img"
                    android:layout_alignTop="@+id/booking_img"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@+id/booking_img"
                    android:fontFamily="@font/muli"
                    android:gravity="center"
                    android:paddingStart="5dp"
                    android:text="Booking"
                    android:textColor="@color/text_black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/booking_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/booking_text"
                    android:layout_alignTop="@id/booking_text"
                    android:layout_marginStart="5dp"
                    android:layout_toRightOf="@id/booking_text"
                    android:fontFamily="@font/muli"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_black"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/booking_star"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignTop="@+id/booking_count"
                    android:layout_marginEnd="50dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_leaderboard_star" />

                <TextView
                    android:id="@+id/booking_star_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/booking_star"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@id/booking_star"
                    android:layout_marginEnd="20dp"
                    android:text="000"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/muli"
                    android:gravity="center"
                    android:textColor="@color/text_black"
                    android:textSize="15sp" />

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>