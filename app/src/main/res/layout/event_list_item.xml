<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="30dp"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:padding="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="240dp">

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_gravity="center_vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:background="@color/white">

                <TextView
                    android:id="@+id/txt_event_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="5dp"
                    android:layout_toLeftOf="@+id/event_paid_btn"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textStyle="bold"
                    android:fontFamily="@font/muli"
                    android:text="Mini Marathon Championship"
                    android:textColor="@color/text_black"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/txt_event_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_event_name"
                    android:fontFamily="@font/muli"
                    android:layout_alignLeft="@+id/txt_event_name"
                    android:singleLine="true"
                    android:textColorHint="@color/text_black"
                    android:hint="25"
                    android:textColor="@color/text_black"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/txt_event_end_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/txt_event_date"
                    android:layout_toEndOf="@+id/txt_event_date"
                    android:fontFamily="@font/muli"
                    android:singleLine="true"
                    android:text="25"
                    android:textColor="@color/text_black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_event_price"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_below="@+id/txt_event_name"
                    android:layout_gravity="center"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="20dp"
                    android:layout_alignParentRight="true"
                    android:drawablePadding="5dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/muli"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="Paid"
                    android:textColor="@color/appColorBase"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/event_paid_btn"
                    android:layout_width="54dp"
                    android:layout_height="26dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    android:layout_marginRight="15dp"
                    android:background="@color/appColorBase"
                    android:fontFamily="@font/muli"
                    android:gravity="center"
                    android:text=""
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:visibility="gone" />

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>