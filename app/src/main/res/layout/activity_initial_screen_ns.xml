<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bordergray">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:text="@string/access_code"
            android:visibility="gone" />

        <EditText
            android:id="@+id/accessCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="AVWD63DB90AK18DWKA"
            android:visibility="gone">

            <requestFocus />
        </EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:text="@string/merchant_id"
            android:visibility="gone" />

        <EditText
            android:id="@+id/merchantId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="89958"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:text="Order Id"
            android:visibility="gone" />

        <EditText
            android:id="@+id/orderId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:visibility="gone" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:text="@string/currency"
            android:visibility="gone" />

        <EditText
            android:id="@+id/currency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="INR"
            android:visibility="gone" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:text="@string/amount"
            android:visibility="gone" />

        <EditText
            android:id="@+id/amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="1.00"
            android:visibility="gone" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:text="@string/redirect_url"
            android:visibility="gone" />

        <EditText
            android:id="@+id/redirectUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textUri"
            android:text="http://www.hobbistan.com/app/hobbistan/ccavenue/PHP/ccavResponseHandler.php"
            android:visibility="gone" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:text="@string/cancel_url"
            android:visibility="gone" />

        <EditText
            android:id="@+id/cancelUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textUri"
            android:text="http://www.hobbistan.com/app/hobbistan/ccavenue/PHP/ccavResponseHandler.php"
            android:visibility="gone" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:text="@string/rsa_url"
            android:visibility="gone" />

        <EditText
            android:id="@+id/rsaUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textUri"
            android:text="http://www.hobbistan.com/app/hobbistan/ccavenue/PHP/GetRSA.php"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/toolbarbase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/appColorBase"
                android:minHeight="60dp" />

            <ImageView
                android:id="@+id/back_res"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="10dp"
                android:minHeight="60dp"
                android:paddingEnd="15dp"
                android:paddingStart="15dp"
                android:src="@drawable/ic_back_button" />

            <TextView
                android:id="@+id/tvtitletext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/muli"
                android:gravity="center"
                android:minHeight="60dp"
                android:padding="5dp"
                android:text="Review Ticket Booking"
                android:textColor="@color/white"
                android:textSize="@dimen/actionbarTextSize"
                android:textStyle="bold" />

        </RelativeLayout>

        <!--UI Design Begin-->
        <!---->
        <!---->
        <!---->
        <ScrollView
            android:id="@+id/ScrollView01"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/nextButton"
            android:layout_below="@+id/toolbarbase"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/bannerbase"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:layout_below="@+id/toolbarbase">

                    <ImageView
                        android:id="@+id/img_logo"
                        android:layout_width="match_parent"
                        android:layout_height="190dp"
                        android:layout_gravity="center_vertical" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-50dp"
                    android:background="@drawable/btn_round_nocolor"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/bannerbase"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/one"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp">

                            <TextView
                                android:id="@+id/txt_event_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/muli"
                                android:text="CAKE POINT"
                                android:textColor="@color/text_black"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <RelativeLayout
                                android:id="@+id/addresslayout"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_alignBottom="@+id/txt_event_location"
                                android:layout_alignParentStart="true"
                                android:layout_alignTop="@+id/txt_event_location"
                                android:layout_marginStart="10dp"
                                android:gravity="center">

                                <ImageView
                                    android:id="@+id/addressimg"
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:src="@drawable/ic_location_event_detail" />

                            </RelativeLayout>

                            <TextView
                                android:id="@+id/txt_event_location"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/txt_event_name"
                                android:layout_marginEnd="10dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_toRightOf="@+id/addresslayout"
                                android:fontFamily="@font/muli"
                                android:gravity="left"
                                android:text="51, Mariamman Kovil Street Peelamedu"
                                android:textColor="@color/text_black"
                                android:textSize="14sp" />

                            <RelativeLayout
                                android:id="@+id/timelayout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignEnd="@id/addresslayout"
                                android:layout_alignStart="@id/addresslayout"
                                android:layout_below="@id/txt_event_location"
                                android:layout_marginTop="10dp"
                                android:gravity="center">

                                <ImageView
                                    android:id="@+id/timeimg"
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:src="@drawable/ic_time_event_detail" />

                            </RelativeLayout>

                            <TextView
                                android:id="@+id/txt_event_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@+id/timelayout"
                                android:layout_alignTop="@+id/timelayout"
                                android:layout_marginEnd="10dp"
                                android:layout_marginStart="10dp"
                                android:layout_toRightOf="@+id/timelayout"
                                android:fontFamily="@font/muli"
                                android:gravity="center"
                                android:text="12-12-1212"
                                android:textColor="@color/text_black"
                                android:textSize="14sp" />

                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@color/white"
                            android:fontFamily="@font/muli"
                            android:gravity="center_vertical"
                            android:text="Total Tickets"
                            android:textColor="@color/text_black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtTotalTickets"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@color/white"
                            android:fontFamily="@font/muli"
                            android:gravity="center_vertical"
                            android:text="TOTAL TICKETS"
                            android:textColor="@color/text_black"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/text_black"
                            android:fontFamily="@font/muli" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/white"
                            android:fontFamily="@font/muli"
                            android:gravity="center_vertical"
                            android:text="Subtotal"
                            android:textColor="@color/text_black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:fontFamily="@font/muli"
                                android:gravity="center_vertical"
                                android:text="Internet handling fees"
                                android:textColor="@color/text_black"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="10dp"
                                android:background="@color/white"
                                android:fontFamily="@font/muli"
                                android:text="Rs.0"
                                android:textColor="@color/text_black"
                                android:textSize="14sp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:fontFamily="@font/muli"
                                android:gravity="center_vertical"
                                android:text="CGST"
                                android:textColor="@color/text_black"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="10dp"
                                android:background="@color/white"
                                android:fontFamily="@font/muli"
                                android:text="Rs.0"
                                android:textColor="@color/text_black"
                                android:textSize="14sp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:fontFamily="@font/muli"
                                android:gravity="center_vertical"
                                android:text="SGST"
                                android:textColor="@color/text_black"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="10dp"
                                android:background="@color/white"
                                android:fontFamily="@font/muli"
                                android:text="Rs.0"
                                android:textColor="@color/text_black"
                                android:textSize="14sp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:fontFamily="@font/muli"
                                android:gravity="center_vertical"
                                android:text="Ticket Price"
                                android:textColor="@color/text_black"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/txtTicketPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="10dp"
                                android:background="@color/white"
                                android:fontFamily="@font/muli"
                                android:text="Rs.0"
                                android:textColor="@color/text_black"
                                android:textSize="14sp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:fontFamily="@font/muli"
                                android:gravity="center_vertical"
                                android:text="Total Price"
                                android:textColor="@color/appColorBase"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/txtTotalPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="10dp"
                                android:background="@color/white"
                                android:fontFamily="@font/muli"
                                android:text="Rs.0"
                                android:textColor="@color/appColorBase"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                        </RelativeLayout>
                    </LinearLayout>

                    <Button
                        android:id="@+id/nextButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerInParent="true"
                        android:background="@drawable/btn_square_login"
                        android:fontFamily="@font/muli"
                        android:onClick="onClick"
                        android:text="@string/pay_now_button"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>
        <!---->

    </RelativeLayout>

</LinearLayout>