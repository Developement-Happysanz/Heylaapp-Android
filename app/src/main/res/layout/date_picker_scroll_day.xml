<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/date_picker_scroll_day_month"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/text_black"
        android:gravity="center_horizontal"
        android:textSize="18sp"
        tools:text="July" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/date_picker_scroll_day_recycler_view"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            tools:listitem="@layout/day_list_item" />
    </LinearLayout>

    <TextView
        android:id="@+id/date_picker_scroll_day_full_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/text_black"
        android:gravity="end"
        android:textSize="18sp"
        tools:text="10th November 2017" />
</LinearLayout>