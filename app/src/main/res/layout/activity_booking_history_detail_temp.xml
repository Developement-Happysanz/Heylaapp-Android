        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_event_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:fontFamily="@font/muli"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:singleLine="false"
                android:text="Mini Marathon Championship"
                android:textColor="@color/text_black"
                android:textStyle="bold"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/ic_time"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:paddingTop="2dp"
                android:layout_marginLeft="15dp"
                android:layout_alignTop="@+id/txt_event_booked_time"
                android:layout_alignBottom="@id/txt_event_booked_time"
                android:src="@drawable/ic_time_event_detail"/>

            <TextView
                android:id="@+id/txt_event_booked_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:layout_below="@+id/txt_event_name"
                android:layout_toRightOf="@id/ic_time"
                android:fontFamily="@font/muli"
                android:singleLine="true"
                android:text="12:00 PM"
                android:layout_marginLeft="10dp"
                android:textColor="@color/text_black"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/ic_date"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="15dp"
                android:layout_alignTop="@+id/txt_event_location"
                android:layout_alignBottom="@id/txt_event_location"
                android:src="@drawable/ic_place_black"/>


            <TextView
                android:id="@+id/txt_event_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/txt_event_booked_time"
                android:fontFamily="@font/muli"
                android:layout_toRightOf="@id/ic_date"
                android:text="12, Mini Marathon Championship, Marathon"
                android:textColor="@color/text_black"
                android:textSize="14sp" />

