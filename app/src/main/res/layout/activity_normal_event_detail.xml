<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bordergray"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bookingbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/eventimglayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/eventimg"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:foreground="@color/temp"
                        android:background="@drawable/event_img" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/eventimg"
                        android:layout_marginStart="10dp"
                        android:paddingBottom="10dp"
                        android:text="CAKE POINT"
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@+id/eventimg"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="-18dp"
                        android:background="@drawable/ic_round_full_color"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        android:src="@drawable/ic_menu_share_app" />

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@+id/eventimg"
                        android:layout_marginEnd="60dp"
                        android:layout_marginTop="-18dp"
                        android:background="@drawable/ic_round_full_color"
                        android:gravity="center"
                        android:text="QA"
                        android:textColor="@color/white" />

                    <ImageView
                        android:id="@+id/eventviews"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_toLeftOf="@id/addfav"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        android:src="@drawable/ic_hide" />

                    <ImageView
                        android:id="@+id/addfav"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        android:src="@drawable/ic_unlike" />

                </RelativeLayout>

            </FrameLayout>

            <RelativeLayout
                android:id="@+id/one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/eventimglayout"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/round_btn_nocolor">

                <RelativeLayout
                    android:id="@+id/addresslayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/addressimg"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignEnd="@+id/addresstxt"
                        android:layout_alignStart="@+id/addresstxt"
                        android:src="@drawable/ic_address" />

                    <TextView
                        android:id="@+id/addresstxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/addressimg"
                        android:text="Address"
                        android:textColor="@color/appColorBase" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/addresslayout"
                    android:layout_alignTop="@+id/addresslayout"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_toRightOf="@+id/addresslayout"
                    android:gravity="center"
                    android:text="51, Mariamman Kovil Street Peelamedu"
                    android:textColor="@color/text_black" />

                <RelativeLayout
                    android:id="@+id/timelayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@id/addresslayout"
                    android:layout_alignStart="@id/addresslayout"
                    android:layout_below="@id/addresslayout"
                    android:layout_marginTop="10dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/timeimg"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignEnd="@+id/timetxt"
                        android:layout_alignStart="@+id/timetxt"
                        android:src="@drawable/ic_clock" />

                    <TextView
                        android:id="@+id/timetxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/timeimg"
                        android:text="Time"
                        android:textColor="@color/appColorBase" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/timelayout"
                    android:layout_alignTop="@+id/timelayout"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_toRightOf="@+id/timelayout"
                    android:gravity="center"
                    android:text="51, Mariamman Kovil Street Peelamedu"
                    android:textColor="@color/text_black" />

                <RelativeLayout
                    android:id="@+id/datelayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@id/addresslayout"
                    android:layout_alignStart="@id/addresslayout"
                    android:layout_below="@id/timelayout"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/dateimg"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignEnd="@+id/datetxt"
                        android:layout_alignStart="@+id/datetxt"
                        android:src="@drawable/ic_calender" />

                    <TextView
                        android:id="@+id/datetxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/dateimg"
                        android:text="Date"
                        android:textColor="@color/appColorBase" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/datelayout"
                    android:layout_alignTop="@+id/datelayout"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_toRightOf="@+id/datelayout"
                    android:gravity="center"
                    android:text="51, Mariamman Kovil Street Peelamedu"
                    android:textColor="@color/text_black" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/one"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/round_btn_nocolor"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Event Details"
                    android:textColor="@color/text_black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="abcabcabacbasklsjdfksdfn,sdflksjfsdabcabcabacbasklsjdfksdfn,sdflksjfsdabcabcabacbasklsjdfksdfn,sdflksjfsdabcabcabacbasklsjdfksdfn,sdflksjfsdabcabcabacbasklsjdfksdfn,sdflksjfsdabcabcabacbasklsjdfksdfn,sdflksjfsdabcabcabacbasklsjdfksdfn,sdflksjfsdabcabcabacbasklsjdfksdfn,sdflksjfsdabcabcabacbasklsjdfksdfn,sdflksjfsd"
                    android:textColor="@color/text_black" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/two"
                android:layout_marginBottom="10dp"

                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/round_btn_nocolor"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Venue"
                    android:textColor="@color/text_black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/four"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/three"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/round_btn_nocolor">

                <TextView
                    android:id="@+id/orgtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Organiser Details"
                    android:textColor="@color/text_black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/followrequest"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignBottom="@+id/orgtitle"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/orgtitle"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_follow" />

                <TextView
                    android:id="@+id/organiser_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/orgtitle"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="BaBaga, Head of cake point"
                    android:textColor="@color/text_black" />

                <RelativeLayout
                    android:id="@+id/organisermobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignStart="@+id/organiser_name"
                    android:layout_below="@+id/organiser_name"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mobile"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/text_black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:layout_marginStart="125dp"
                        android:textColor="@color/text_black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9999999999"
                        android:layout_marginStart="135dp"
                        android:textColor="@color/text_black"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/organisermail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/organiser_name"
                    android:layout_alignStart="@+id/organiser_name"
                    android:layout_below="@+id/organisermobile"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/text_black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:layout_marginStart="125dp"
                        android:textColor="@color/text_black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9999999999"
                        android:layout_marginStart="135dp"
                        android:textColor="@color/text_black"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/organiserfb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/organiser_name"
                    android:layout_alignStart="@+id/organiser_name"
                    android:layout_below="@+id/organisermail"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Facebook ID"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/text_black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:layout_marginStart="125dp"
                        android:textColor="@color/text_black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9999999999"
                        android:layout_marginStart="135dp"
                        android:textColor="@color/text_black"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/organiserurl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/organiser_name"
                    android:layout_alignStart="@+id/organiser_name"
                    android:layout_below="@+id/organiserfb"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Website"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/text_black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:layout_marginStart="125dp"
                        android:textColor="@color/text_black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9999999999"
                        android:layout_marginStart="135dp"
                        android:textColor="@color/text_black"/>

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>


    </ScrollView>

    <RelativeLayout
        android:id="@+id/bookingbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/appColorBase"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/live_chat"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:layout_marginStart="10dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_review" />

        <ImageView
            android:id="@+id/checkin"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_checkin_white" />

        <ImageView
            android:id="@+id/book_tickets"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_booknow_white" />


    </RelativeLayout>

</RelativeLayout>