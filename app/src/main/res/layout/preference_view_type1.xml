<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rlPref"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:padding="2dp">

        <!--<ImageView-->
        <!--android:id="@+id/txt_preference_name"-->
        <!--android:layout_width="@dimen/preference_round_size"-->
        <!--android:layout_height="@dimen/preference_round_size"-->
        <!--android:layout_centerInParent="true"-->
        <!--android:background="@drawable/button_rounded_green"-->
        <!--android:gravity="center"-->
        <!--android:padding="2dp" />-->

        <com.palprotech.heylaapp.customview.CircleImageView
            android:id="@+id/txt_preference_name"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:fitsSystemWindows="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_default_profile"
            app:layout_collapseMode="parallax" />

        <ImageView
            android:id="@+id/pref_tick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentRight="true"
            android:background="@drawable/ic_tick" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlPref"
        android:layout_marginLeft="30dp">

        <TextView
            android:id="@+id/txt_pref_category_name"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="hi"
            android:textColor="@color/text_black"
            android:textSize="15dp" />

    </LinearLayout>

</RelativeLayout>