<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/username"
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/login_username_texbox"
            android:drawableLeft="@drawable/ic_login_email"
            android:hint=" Username"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textSize="15dp" />

        <!--<EditText-->
            <!--android:id="@+id/password"-->
            <!--android:layout_width="240dp"-->
            <!--android:layout_height="50dp"-->
            <!--android:layout_below="@+id/username"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:background="@drawable/login_username_texbox"-->
            <!--android:drawableLeft="@drawable/ic_login_password"-->
            <!--android:drawableRight="@drawable/ic_login_show_password"-->
            <!--android:hint=" Password"-->
            <!--android:paddingLeft="5dp"-->
            <!--android:paddingRight="5dp"-->
            <!--android:singleLine="true"-->
            <!--android:textSize="15dp" />-->

        <android.support.design.widget.TextInputLayout
            android:id="@+id/password"
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:layout_below="@+id/username"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:hint="Password"
            android:background="@drawable/login_username_texbox"

            app:passwordToggleContentDescription="Description"
            app:passwordToggleDrawable="@drawable/show_or_hide_password"
            app:passwordToggleTint="@color/appColorBase">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:singleLine="true"
                android:drawableLeft="@drawable/ic_login_password"
                android:textSize="15dp"
                android:background="@android:color/transparent"
                android:inputType="textPassword"/>
        </android.support.design.widget.TextInputLayout>


        <Button
            android:id="@+id/signin"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_below="@id/password"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_sign_in"
            android:text="LogIn"
            android:textColor="@color/colour_pick" />

        <TextView
            android:id="@+id/fb_login_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signin"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Or Login using " />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fb_login_text"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/login_using_fb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/login_facebook" />

            <ImageView
                android:id="@+id/login_using_gplus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:src="@drawable/login_google_plus" />

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>